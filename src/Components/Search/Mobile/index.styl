.root
  position fixed
  top 0
  left 0
  z-index $z_mobile_header_search
  width 100vw
  height 100%
  background-color #fff
  *
    -webkit-tap-highlight-color: rgba(0,0,0,0)
  +above($desktop)
    display none

.header
  display flex
  align-items center
  height 60px
  padding 0px 20px
  border-bottom 1px solid $color_grey_lighter
  .searchIcon
    flex-center-children()
    flex-shrink 0
    margin-right 10px
    svg
      fill $color_grey_dark
  input
    display block
    flex-grow 2
    height 40px
    border none
  .clearIcon
    box(40px)
    flex-center-children()
    flex-shrink 0
    padding 15px
    cursor pointer
    svg
      fill $color_grey
  .cancel
    height 40px
    flex-center-children()
    flex-shrink 0
    cursor pointer
    span
      padding-top 1px
      text-transform uppercase
      font-weight bold
      font-size 0.875rem
      line-height 1
      color $color_primary
  +below($phablet)
    padding 0px 15px
