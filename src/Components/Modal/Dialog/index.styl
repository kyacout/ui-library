.dialog
  display flex
  flex-direction column
  position relative
  max-width 90%
  margin 10% auto
  padding 30px 30px 20px 30px
  background-color #fff
  box-shadow 0px 0px 20px rgba(0, 0, 0, 0.3);
  transition margin 0.15s ease-out
  pointer-events auto
  +below($tablet)
    margin 20% auto
  +below($phablet)
    padding 20px 15px 15px
  &.tall
    margin 5% auto 10%
    +below($tablet)
      margin 10% auto 20%
  .close
    padding 13px
    position absolute
    top -3px
    right -3px
    cursor pointer
    transition: all 0.1s ease
    svg
      fill $color_grey_light
    &:hover
      transform scale(1.1)
      top -4px
      right -4px
      svg
        fill darken($color_grey_light, 20%)
    &:active
      transform scale(1)
      top -3px
      right -3px
  .body
    display flex
    flex-direction column
    position relative
    min-height 200px
    overflow auto
    overflow-x hidden
    &.hideCloseButton
      padding-top 10px
  .footer
    display flex
    justify-content flex-end
    margin-top 20px
    padding 20px 0px 0px
    border-top 1px solid #ccc
    .buttonContainer
      min-width 0
      button
        margin-bottom 0
    +below($phablet)
      padding-top 15px
      
.simpleDialog
  flex-center-children-column()
  padding-top 30px
  
  .title
    display block
    text-align center
    font-size 1.5rem
    margin-bottom 10px
    max-width 100%
  .text
    display block
    text-align center
    color $color_grey
    max-width 100%

