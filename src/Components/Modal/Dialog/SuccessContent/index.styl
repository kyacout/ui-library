.root
  flex-center-children-column()
  padding-top 30px

  .iconWrapper
    position relative
    box(100px)
    flex-shrink: 0
    margin-bottom 20px
  .icon
    box(100%)
    position absolute
    top 0
    left 0
  .bgIcon
    svg
      box(100%)
      fill #fff
      stroke-width 10px
      stroke $color_primary
  .mainIcon
    flex-center-children()
    svg
      fill $color_primary
  
  .title
    display block
    text-align center
    font-size 1.5rem
    margin-bottom 10px
    max-width 100%
  .text
    display block
    text-align center
    color $color_grey
    max-width 100%
