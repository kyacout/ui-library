.root
  margin-bottom 50px
  h1, h2, h3, h4
    + br
      display none
  ul
    list-style-type disc
    margin 5px 0 15px 20px
    li
      padding 5px 0
  ol
    list-style-type decimal
    margin 5px 0 15px 20px
    li
      padding 5px 0
  a
    color $color_primary
    text-decoration underline
    &:hover
      text-decoration none
