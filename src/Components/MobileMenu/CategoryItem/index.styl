.Item
  position relative
  display flex
  align-items center
  min-height 60px
  cursor pointer
  &:last-child
    border-bottom 1px solid $color_grey_lighter  
    .RightSide
      border-bottom none

.Icon
  flex-shrink 0
  margin 0 20px
  min-width 20px

.RightSide
  display flex
  align-items center
  flex-grow 2
  min-height 60px
  border-bottom 1px solid $color_grey_lighter

.Title
  display flex
  align-items center
  flex-grow 2
  padding 10px 0
  line-height 1.3

.Arrow
  margin-right 20px
