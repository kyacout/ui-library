.IconBar
  display flex
  align-items center
  justify-content space-between
  width 100%
  border-bottom 1px solid darken($color_grey_lightest, 5%)
  padding-bottom 2px
  *
    user-select none
    -webkit-tap-highlight-color: rgba(0,0,0,0);
  +above($desktop)
    display none

.Icon
  width calc(20% + 10px)
  height 53px
  padding 8px 0px
  transform translateY(4px)
  &:first-child
  &:last-child
    width calc(20% - 10px)

.BurgerIconSpacing
  margin-top 3px
  margin-bottom -3px
